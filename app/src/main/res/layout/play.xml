<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="278dp"
        android:src="@drawable/play_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="30dp" >

        <TextView
            android:id="@+id/now_play_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="00:00"
            android:layout_gravity="center" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/song_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00"
            android:layout_marginRight="8dp"
            android:layout_gravity="center" />
    </LinearLayout>


    <TextView
        android:id="@+id/singer_songname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="未知"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@android:drawable/ic_media_play"
            android:gravity="center"
            android:onClick="playMusicOnline"
            android:text="播放"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bt_previous"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@android:drawable/ic_media_previous"
            android:gravity="center"
            android:onClick="playPrevious"
            android:text="上一首" />

        <TextView
            android:id="@+id/bt_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@android:drawable/ic_media_pause"
            android:gravity="center"
            android:onClick="pauseMusicOnline"
            android:text="暂停" />

        <TextView
            android:id="@+id/bt_replay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@android:drawable/ic_media_play"
            android:gravity="center"
            android:onClick="replyMusicOnline"
            android:text="重播" />
        <TextView
            android:id="@+id/bt_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@android:drawable/ic_media_next"
            android:gravity="center"
            android:onClick="playNext"
            android:text="下一首" />
    </LinearLayout>
</LinearLayout>
